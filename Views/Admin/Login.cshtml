@model InvWebApp.Models.User;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Simple.cshtml";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-xl">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-5">
                            <div class="icon-circle-lg bg-primary text-white mb-3 mx-auto">
                                <i class="fa-solid fa-hospital fa-2x"></i>
                            </div>
                            <h2 class="fw-bold text-gradient">MedInventory System</h2>
                            <p class="text-muted">Sign in to access your account</p>
                        </div>

                        <form asp-controller="Admin" asp-action="Login" method="post">
                            <!-- Username -->
                            <div class="form-group mb-4">
                                <label class="form-label fw-semibold">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fa fa-user text-primary"></i>
                                    </span>
                                    <input type="text" class="form-control ps-3" placeholder="Enter your username" asp-for="UserName" required>
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="form-group mb-4">
                                <label class="form-label fw-semibold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="fa fa-lock text-primary"></i>
                                    </span>
                                    <input type="password" class="form-control ps-3" placeholder="Enter your password" asp-for="Password" required>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Remember Me -->
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" asp-for="KeepLoggedIn">
                                <label class="form-check-label text-muted" asp-for="KeepLoggedIn">
                                    Remember me
                                </label>
                            </div>

                            <!-- Error Message -->
                            @if (ViewData["ValidateMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                                    <i class="fa fa-exclamation-circle me-2"></i>
                                    @ViewData["ValidateMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-4">
                                <i class="fa fa-sign-in-alt me-2"></i>Sign In
                            </button>

                            <!-- Register Link -->
                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Don't have an account?
                                    <a href="/Admin/Register" class="text-primary text-decoration-none fw-semibold">
                                        Create one here
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Footer -->
                <div class="text-center mt-4">
                    <p class="text-white-50 small">
                        &copy; 2024 MedInventory System. Hospital Equipment Management
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .icon-circle-lg {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

    .rounded-xl {
        border-radius: 20px !important;
    }

    .card {
        border: none;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.95);
    }

    .form-control {
        border-left: 0;
        padding: 12px 15px;
        border-radius: 0 8px 8px 0;
    }

    .input-group-text {
        border-radius: 8px 0 0 8px;
        border-right: 0;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-weight: 600;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
</style>