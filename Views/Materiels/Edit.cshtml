@model InvWebApp.Models.Materiel

@{
    ViewData["Title"] = "Edit";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-start">
            <div class="page-title">
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="/">Dashboard</a></li>
                    <li><a href="/Materiels">Materiel</a></li>
                    <li>@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row text-capitalise mb-3">
        <h2 class="special-heading">Materiel</h2>
        <p>Edit Materiel</p>
    </div>
    <div class="row d-flex flex-column align-items-center">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Edit Materiel</strong>
                </div>
                <div class="card-body">

                    <!-- START FORM -->
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Materiel Name</label>
                                <input asp-for="MaterielName" class="form-control" required />
                                <span asp-validation-for="MaterielName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Inventory Number</label>
                                <input asp-for="InventoryNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label class="form-label">Category</label>
                                <select asp-for="CategorieId" asp-items="ViewBag.Categories" class="form-control"></select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Service</label>
                                <select asp-for="ServiceId" asp-items="ViewBag.Services" class="form-control"></select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Group (optional)</label>
                                <select asp-for="ServiceGroupId" asp-items="ViewBag.Groups" class="form-control">
                                    <option value="">-- none --</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label>Kind</label>
                                <select asp-for="Kind" class="form-control" id="Kind">
                                    <option value="1">Consumable</option>
                                    <option value="2">Equipment</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label>UoM</label>
                                <input asp-for="Uom" class="form-control" placeholder="piece / box / bottle" />
                            </div>
                            <div class="col-md-4">
                                <label>Unit Cost</label>
                                <input asp-for="UnitCost" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label>Reorder Point</label>
                                <input asp-for="ReorderPoint" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label>Reorder Quantity</label>
                                <input asp-for="ReorderQuantity" class="form-control" />
                            </div>
                        </div>

                        <hr />
                        <h6>Equipment (ignore if Consumable)</h6>
                        <div id="equipFields" class="row">
                            <div class="col-md-4">
                                <label>Serial Number</label>
                                <input asp-for="SerialNumber" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label>Asset Tag</label>
                                <input asp-for="AssetTag" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label>Status</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="1">Active</option>
                                    <option value="2">InMaintenance</option>
                                    <option value="3">Retired</option>
                                </select>
                            </div>
                        </div>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a class="btn btn-secondary" asp-action="Index">
                                <i class="fa-solid fa-angle-left"></i>&nbsp;Back to List
                            </a>
                        </div>
                    </form>
                    <!-- END FORM -->

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            function toggleEquip() {
                var kind = document.getElementById('Kind').value;
                var box = document.getElementById('equipFields');
                if (kind === '1') { // 1 = Consumable
                    box.style.display = 'none';
                } else {
                    box.style.display = '';
                }
            }
            document.getElementById('Kind').addEventListener('change', toggleEquip);
            toggleEquip(); // run on load
        })();
    </script>
}
