@model InvWebApp.Models.WorkOrder
@{
    ViewData["Title"] = "Delete Work Order";
}
<div class="container-fluid">
    <div class="row d-flex flex-column align-items-center">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header"><strong class="card-title mb-3">Delete Work Order</strong></div>
                <div class="card-body">
                    <p>Are you sure you want to delete <strong>@Model.Title</strong> for <strong>@Model.Materiel.MaterielName</strong>?</p>
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
