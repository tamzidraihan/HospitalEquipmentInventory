@model IEnumerable<InvWebApp.Models.WorkOrder>
@{
    ViewData["Title"] = "Work Orders";
}
<div class="breadcrumbs">
    <div class="col-sm-4"><div class="page-header float-start"><div class="page-title"><h1>@ViewData["Title"]</h1></div></div></div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right"><li><a href="/">Dashboard</a></li><li>@ViewData["Title"]</li></ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="container text-capitalise">
        <h2 class="special-heading">Maintenance</h2>
        <p>Open and recent work orders</p>
    </div>

    <a class="btn btn-primary mb-3" asp-action="Create">Create Work Order</a>

    <div class="card">
        <div class="card-header"><strong class="card-title mb-3">Work Orders</strong></div>
        <div class="card-body">
            <table class="table" id="myDatatable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Materiel</th>
                        <th>Title</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Open Date</th>
                        <th>Due</th>
                        <th>Assigned To</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var w in Model)
                    {
                        <tr>
                            <td>@w.Id</td>
                            <td>@w.Materiel.MaterielName</td>
                            <td>@w.Title</td>
                            <td>@w.Priority</td>
                            <td>@w.Status</td>
                            <td>@w.OpenDate.ToString("yyyy-MM-dd")</td>
                            <td>@(w.DueDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(string.IsNullOrWhiteSpace(w.AssignedTo) ? "-" : w.AssignedTo)</td>
                            <td><a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@w.Id">Edit</a></td>
                            <td><a class="btn btn-info btn-sm" asp-action="Complete" asp-route-id="@w.Id">Complete</a></td>
                            <td><a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@w.Id">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
