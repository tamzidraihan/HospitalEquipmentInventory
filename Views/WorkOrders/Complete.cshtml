@model InvWebApp.Models.WorkOrder
@{
    ViewData["Title"] = "Complete Work Order";
}
<div class="breadcrumbs">
    <div class="col-sm-4"><div class="page-header float-start"><div class="page-title"><h1>@ViewData["Title"]</h1></div></div></div>
    <div class="col-sm-8">
        <div class="page-header float-end">
            <div class="page-title">
                <ol class="breadcrumb text-right"><li><a href="/">Dashboard</a></li><li><a href="/WorkOrders">Work Orders</a></li><li>@ViewData["Title"]</li></ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row d-flex flex-column align-items-center">
        <div class="col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header"><strong class="card-title mb-3">@Model.Title</strong></div>
                <div class="card-body">
                    <p><strong>Materiel:</strong> @Model.Materiel.MaterielName</p>
                    <p><strong>Opened:</strong> @Model.OpenDate.ToString("yyyy-MM-dd")</p>
                    <p><strong>Priority:</strong> @Model.Priority</p>

                    <form asp-action="Complete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-2">
                            <label class="form-label">Resolution Note (optional)</label>
                            <textarea name="resolutionNote" class="form-control"></textarea>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Next Service Date (optional)</label>
                            <input type="date" name="nextServiceDate" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-info">Mark Completed</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
