@model IEnumerable<InvWebApp.Models.Location>
@{
    ViewData["Title"] = "Locations";
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Locations</h5>
        <a class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead><tr><th>#</th><th>Name</th><th style="width:160px">Actions</th></tr></thead>
            <tbody>
                @{
                    var i = 1;
                    foreach (var l in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@l.Name</td>
                            <td>
                                <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@l.Id">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@l.Id"
                                   onclick="return confirm('Delete this location?');">Delete</a>
                            </td>
                        </tr>
                        ; i++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
