@{
    ViewData["Title"] = "Adjust";
    var materiels = (IEnumerable<InvWebApp.Models.Materiel>)ViewBag.Materiels;
    var locations = (IEnumerable<InvWebApp.Models.Location>)ViewBag.Locations;
}
<div class="card">
    <div class="card-header"><h5 class="mb-0">Adjust Stock</h5></div>
    <div class="card-body">
        <form asp-action="Adjust" method="post" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Materiel</label>
                <select class="form-control" name="materielId" required>
                    @foreach (var m in materiels)
                    {
                        <option value="@m.Id">@m.MaterielName</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Location</label>
                <select class="form-control" name="locationId" required>
                    @foreach (var l in locations)
                    {
                        <option value="@l.Id">@l.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Delta (+/-)</label>
                <input type="number" class="form-control" name="delta" required />
            </div>
            <div class="col-md-8">
                <label class="form-label">Reason</label>
                <input class="form-control" name="reason" required />
            </div>
            <div class="col-12">
                <button class="btn btn-secondary">Adjust</button>
                <a asp-action="Index" class="btn btn-light">Back</a>
            </div>
        </form>
    </div>
</div>
